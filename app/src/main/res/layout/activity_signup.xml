<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFF5F5"
    android:padding="32dp"
    tools:context=".SignupActivity">

    <!-- 앱 로고/아이콘 (상단 중앙) -->
    <ImageView
        android:id="@+id/app_logo"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginTop="64dp"
        android:src="@drawable/logo"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:ignore="ContentDescription" />

    <!-- [수정됨] LinearLayout의 ID 변경 (EditText와 이름 겹침 방지) -->
    <LinearLayout
        android:id="@+id/signup_form_container"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="48dp"
        app:layout_constraintTop_toBottomOf="@id/app_logo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- 아이디 입력 -->
        <EditText
            android:id="@+id/edit_text_signup_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:background="@drawable/bottom_line_pink"
            android:hint="아이디 6~12자"
            android:inputType="text"
            android:minHeight="48dp"
            android:paddingBottom="10dp"
            android:textColorHint="#E39FAE"
            android:textSize="16sp" />

        <!-- 비밀번호 입력 -->
        <EditText
            android:id="@+id/edit_text_signup_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:background="@drawable/bottom_line_pink"
            android:hint="영문+숫자+특수문자 6~12자"
            android:inputType="textPassword"
            android:minHeight="48dp"
            android:paddingBottom="10dp"
            android:textColorHint="#E39FAE"
            android:textSize="16sp" />

        <!-- 이름 입력 -->
        <EditText
            android:id="@+id/edit_text_signup_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:background="@drawable/bottom_line_pink"
            android:hint="이름 입력"
            android:inputType="text"
            android:minHeight="48dp"
            android:paddingBottom="10dp"
            android:textColorHint="#E39FAE"
            android:textSize="16sp" />

    </LinearLayout>

    <!-- 회원가입 완료 버튼 -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/button_signup_confirm"
        android:layout_width="0dp"
        android:layout_height="56dp"
        android:text="회원가입 완료"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        app:backgroundTint="#DD7793"
        android:layout_marginTop="30dp"
        app:layout_constraintTop_toBottomOf="@+id/signup_form_container"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>