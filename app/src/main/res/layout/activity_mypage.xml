<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F8F8F8"
    tools:context=".MainActivity"> <!-- MainActivity나 MyPageFragment로 변경하세요. -->

    <!-- 1. 상단 헤더 (프로필 및 설정 아이콘) -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/header_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        app:layout_constraintTop_toTopOf="parent">

        <!-- 프로필 이미지 (CircleImageView 라이브러리 필요) -->
        <!-- de.hdodenhof.circleimageview.CircleImageView 대신 일반 ImageView를 사용하려면 수정하세요. -->
        <ImageView
            android:id="@+id/profile_image"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/profile1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:contentDescription="프로필 이미지" />

        <!-- 닉네임 텍스트 -->
        <TextView
            android:id="@+id/nickname_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:text="oumfore 님"
            android:textColor="#BF4C65"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@+id/profile_image"
            app:layout_constraintTop_toTopOf="@+id/profile_image"
            app:layout_constraintBottom_toBottomOf="@+id/profile_image" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- 2. 바로가기 버튼 섹션 -->
    <LinearLayout
        android:id="@+id/shortcut_buttons_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="24dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:weightSum="3"
        android:background="@drawable/rounded_background_white"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        app:layout_constraintTop_toBottomOf="@+id/header_layout">

        <!-- 설정 버튼 -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">
            <ImageView
                android:id="@+id/settings_icon"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/settings"
                app:tint="#FFC0CB"
                android:contentDescription="설정 아이콘" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="설정"
                android:textColor="#E39FAE"
                android:textSize="14sp"
                android:layout_marginTop="4dp"/>
        </LinearLayout>

        <!-- 내 리뷰 버튼 -->
        <LinearLayout
            android:id="@+id/logout_button_container"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">
            <ImageView
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/review"
                app:tint="#FFC0CB"
                android:contentDescription="내 리뷰 아이콘" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="내 리뷰"
                android:textColor="#E39FAE"
                android:textSize="14sp"
                android:layout_marginTop="4dp"/>
        </LinearLayout>

        <!-- 로그아웃 버튼 -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">
            <ImageView
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/logout"
                app:tint="#FFC0CB"
                android:contentDescription="로그아웃 아이콘" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="로그아웃"
                android:textColor="#E39FAE"
                android:textSize="14sp"
                android:layout_marginTop="4dp"/>
        </LinearLayout>
    </LinearLayout>

    <!-- 3. 타임라인 제목 -->
    <TextView
        android:id="@+id/timeline_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="타임라인"
        android:textColor="#BF4C65"
        android:textSize="22sp"
        android:textStyle="bold"
        android:layout_marginStart="16dp"
        android:layout_marginTop="32dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/shortcut_buttons_layout"/>



    <!-- 5. 카페 피드 목록 (RecyclerView 사용) -->
    <!-- 지도 카드 제거 후, 이 RecyclerView가 바로 아래에 위치합니다. -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvTimelineFeed"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintTop_toBottomOf="@+id/timeline_title"
        app:layout_constraintBottom_toTopOf="@+id/bottom_nav_placeholder"
        tools:listitem="@layout/item_timeline_feed" />

    <!-- 6. 하단 네비게이션 바 Placeholder -->
    <View
        android:id="@+id/bottom_nav_placeholder"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="#FFFFFF"
        app:layout_constraintBottom_toBottomOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>