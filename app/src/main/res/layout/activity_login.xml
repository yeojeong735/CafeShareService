<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFF5F5"
    android:padding="32dp"
    tools:context=".LoginActivity">

    <!-- 1. 앱 로고/아이콘 (상단 중앙) -->
    <ImageView
        android:id="@+id/app_logo"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginTop="64dp"
        android:src="@drawable/ic_cafe_finder"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:ignore="ContentDescription" />

    <!-- 2. 입력 필드 컨테이너 -->
    <LinearLayout
        android:id="@+id/input_container"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="48dp"
        app:layout_constraintTop_toBottomOf="@id/app_logo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- ID 입력 필드 -->
        <EditText
            android:id="@+id/edit_text_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="아이디 6~12자"
            android:inputType="text"
            android:paddingBottom="10dp"
            android:background="@drawable/bottom_line_pink"
            android:textColorHint="#E91E63"
            android:layout_marginBottom="20dp"
            android:textSize="16sp"/>

        <!-- 비밀번호 입력 필드 -->
        <EditText
            android:id="@+id/edit_text_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="영문+숫자+특수문자 6~12자"
            android:inputType="textPassword"
            android:paddingBottom="10dp"
            android:background="@drawable/bottom_line_pink"
            android:textColorHint="#E91E63"
            android:layout_marginBottom="10dp"
            android:textSize="16sp"/>

        <!-- 자동 로그인 체크박스 -->
        <CheckBox
            android:id="@+id/checkbox_auto_login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="자동로그인"
            android:layout_gravity="end"
            android:buttonTint="#E91E63"
            android:textColor="#E91E63"
            android:textSize="14sp" />

    </LinearLayout>

    <!-- 3. 로그인 버튼 -->
    <Button
        android:id="@+id/button_login"
        android:layout_width="0dp"
        android:layout_height="56dp"
        android:layout_marginTop="24dp"
        android:background="@drawable/button_background_gradient"
        android:stateListAnimator="@null"
        android:text="로그인"
        android:textColor="@android:color/white"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/input_container"
        app:rippleColor="#E91E63" />

    <!-- 4. 하단 링크 (ID 찾기, 비밀번호 찾기, 회원가입) -->
    <LinearLayout
        android:id="@+id/link_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/button_login"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/text_find_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="아이디 찾기"
            android:textColor="#E91E63"
            android:layout_marginEnd="16dp"/>

        <TextView
            android:id="@+id/text_find_password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="비밀번호 찾기"
            android:textColor="#E91E63"
            android:layout_marginEnd="16dp"/>

        <TextView
            android:id="@+id/text_signup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="회원가입"
            android:textColor="#E91E63"/>

    </LinearLayout>

    <!-- 5. 소셜 로그인 버튼 (하단) -->
    <LinearLayout
        android:id="@+id/social_login_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="32dp"
        app:layout_constraintBottom_toTopOf="@id/bottom_navigation_placeholder"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- 예시 아이콘. 실제 아이콘으로 대체 필요 -->
        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginEnd="30dp"
            android:src="@drawable/ic_phone_pink"
            tools:ignore="ContentDescription" />

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginEnd="30dp"
            android:src="@drawable/ic_naver_pink"
            tools:ignore="ContentDescription" />
        <!-- 위의 두 개의 버튼도 이미지 버튼으로 -->
        <ImageButton
            android:id="@+id/button_google_login"  android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/ic_google_pink"
            android:background="@android:color/transparent" android:scaleType="fitCenter"
            tools:ignore="ContentDescription" />

    </LinearLayout>

    <!-- 하단 내비게이션 바를 위한 Placeholder (실제 구현은 BottomNavigationView로 대체) -->
    <View
        android:id="@+id/bottom_navigation_placeholder"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="#FFF5F5" />

</androidx.constraintlayout.widget.ConstraintLayout>