<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFF5F5"
    tools:context=".ReviewActivity">

    <!-- 상단 지도/제목 Placeholder (실제 지도로 대체 필요) -->
    <View
        android:id="@+id/map_placeholder"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:background="@color/design_default_color_background"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- 메인 콘텐츠 스크롤 뷰 -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/map_placeholder"
        app:layout_constraintBottom_toTopOf="@id/button_register">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingHorizontal="24dp"
            android:paddingVertical="16dp">

            <!-- 섹션 1: 제목 및 별점 -->
            <TextView
                android:id="@+id/cafe_name_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="#E91E63"
                android:layout_marginBottom="8dp"

                android:text=""
                tools:text="카페 핀드"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="어떠셨나요?"
                android:textColor="#E91E63"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="24dp"/>

            <!-- 별점 (RatingBar) -->
            <RatingBar
                android:id="@+id/rating_bar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:numStars="5"
                android:stepSize="1"
                android:rating="0"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="32dp"
                android:theme="@style/PinkRatingBar" /> <!-- 별 색상을 위한 스타일 (아래 참고) -->



            <!-- 섹션 2: 사진 추가 영역 (Rounded Box) -->
            <androidx.cardview.widget.CardView
                android:id="@+id/card_add_photo"
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:layout_marginBottom="24dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="0dp"
                app:cardBackgroundColor="#FCE4EC"
                android:foreground="?android:attr/selectableItemBackground">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center">
                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_add_photo_pink"
                        app:tint="#E91E63"
                        tools:ignore="ContentDescription" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="사진을 추가해 주세요."
                        android:textColor="#E91E63"
                        android:layout_marginTop="8dp"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- 섹션 3: 해시태그 추가 영역 (Rounded Box) -->
            <androidx.cardview.widget.CardView
                android:id="@+id/card_add_hashtag"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_marginBottom="24dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="0dp"
                app:cardBackgroundColor="#FCE4EC"
                android:foreground="?android:attr/selectableItemBackground">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="이 곳에 어울리는 해시태그를 추가해 주세요."
                        android:textColor="#E91E63"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="#해시태그"
                        android:textColor="#E91E63"
                        android:layout_marginTop="4dp"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- 섹션 4: 리뷰 작성 영역 (Rounded Box) -->
            <androidx.cardview.widget.CardView
                android:id="@+id/card_write_review"
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:layout_marginBottom="32dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="0dp"
                app:cardBackgroundColor="#FCE4EC">

                <EditText
                    android:id="@+id/edit_text_review"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="top|start"
                    android:padding="16dp"
                    android:background="@android:color/transparent"
                    android:hint="리뷰를 작성해 주세요.\n욕설, 비방, 명예훼손성 표현은\n누군가에게 상처가 될 수 있습니다."
                    android:textColorHint="#E91E63"
                    android:textSize="14sp"
                    android:inputType="textMultiLine"/>

            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </ScrollView>

    <!-- 하단 "등록" 버튼 -->
    <Button
        android:id="@+id/button_register"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_marginHorizontal="32dp"
        android:layout_marginBottom="16dp"
        android:text="등록 >"
        android:textSize="18sp"
        android:textColor="@android:color/white"
        android:backgroundTint="#E91E63"
        android:stateListAnimator="@null"
        app:layout_constraintBottom_toTopOf="@id/bottom_navigation_placeholder"/>

    <!-- 하단 내비게이션 바 Placeholder -->
    <View
        android:id="@+id/bottom_navigation_placeholder"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="#FFF5F5" />

</androidx.constraintlayout.widget.ConstraintLayout>