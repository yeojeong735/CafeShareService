<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- 1. 배경 지도 (저장 화면과 동일한 위치/크기) -->
    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- 2. 리뷰 작성 컨텐츠 (카드뷰 형태) -->
    <!-- layout_marginTop="110dp": 상단 지도가 보이도록 여백 -->
    <!-- layout_marginBottom="-20dp": 하단 모서리 둥글기 숨김 (꽉 채움) -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="110dp"
        android:layout_marginBottom="-20dp"
        app:cardCornerRadius="20dp"
        app:cardElevation="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <!-- 내부 레이아웃 (배경색 지정) -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#FFF5F5"
            android:paddingBottom="20dp">

            <!-- (1) 스크롤 되는 리뷰 작성 영역 -->
            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:fillViewport="true"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toTopOf="@id/button_register">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingHorizontal="24dp"
                    android:paddingTop="24dp"
                    android:paddingBottom="20dp">

                    <!-- 제목 및 별점 -->
                    <TextView
                        android:id="@+id/cafe_name_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="24sp"
                        android:textStyle="bold"
                        android:textColor="#BF4C65"
                        android:layout_marginBottom="8dp"
                        tools:text="카페 핀드"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="어떠셨나요?"
                        android:textColor="#BF4C65"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="24dp"/>

                    <RatingBar
                        android:id="@+id/rating_bar"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:numStars="5"
                        android:stepSize="1"
                        android:rating="0"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginBottom="32dp"
                        android:theme="@style/PinkRatingBar" />

                    <!-- 사진 추가 -->
                    <androidx.cardview.widget.CardView
                        android:id="@+id/card_add_photo"
                        android:layout_width="match_parent"
                        android:layout_height="180dp"
                        android:layout_marginBottom="24dp"
                        app:cardCornerRadius="16dp"
                        app:cardElevation="0dp"
                        app:cardBackgroundColor="#FCE4EC">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:gravity="center">
                            <ImageView
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:src="@drawable/ic_add_photo_pink"
                                app:tint="#DD7793"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="사진을 추가해 주세요."
                                android:textColor="#BF4C65"
                                android:layout_marginTop="8dp"/>
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                    <!-- 해시태그 추가 -->
                    <androidx.cardview.widget.CardView
                        android:id="@+id/card_add_hashtag"
                        android:layout_width="match_parent"
                        android:layout_height="80dp"
                        android:layout_marginBottom="24dp"
                        app:cardCornerRadius="16dp"
                        app:cardElevation="0dp"
                        app:cardBackgroundColor="#FCE4EC">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:gravity="center">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="이 곳에 어울리는 해시태그를 추가해 주세요."
                                android:textColor="#BF4C65"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="#해시태그"
                                android:textColor="#DD7793"
                                android:layout_marginTop="4dp"/>
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                    <!-- 텍스트 리뷰 작성 -->
                    <androidx.cardview.widget.CardView
                        android:id="@+id/card_write_review"
                        android:layout_width="match_parent"
                        android:layout_height="180dp"
                        android:layout_marginBottom="10dp"
                        app:cardCornerRadius="16dp"
                        app:cardElevation="0dp"
                        app:cardBackgroundColor="#FCE4EC">
                        <EditText
                            android:id="@+id/edit_text_review"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="top|start"
                            android:padding="16dp"
                            android:background="@android:color/transparent"
                            android:hint="리뷰를 작성해 주세요."
                            android:textColorHint="#BF4C65"
                            android:textSize="14sp"
                            android:inputType="textMultiLine"/>
                    </androidx.cardview.widget.CardView>

                </LinearLayout>
            </ScrollView>

            <!-- (2) 하단 등록 버튼 (배경색 위 고정) -->
            <!-- 이 버튼은 CardView 안에 있으므로 뒤에 지도가 비치지 않습니다 -->
            <Button
                android:id="@+id/button_register"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_marginHorizontal="32dp"
                android:layout_marginBottom="20dp"
                android:text="등록 >"
                android:textSize="18sp"
                android:textColor="@android:color/white"
                android:backgroundTint="#DD7793"
                android:stateListAnimator="@null"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>