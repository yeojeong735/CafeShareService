<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- 그라데이션 정의: 연한 핑크색에서 약간 진한 핑크색으로 -->
    <gradient
        android:startColor="#F8DCE2"
    android:endColor="#E8A9B8"
    android:angle="0" />            <!-- 왼쪽에서 오른쪽으로 수평 그라데이션 -->

    <!-- 모서리를 부드럽게 라운딩 처리 (로그인 버튼 디자인 반영) -->
    <corners
        android:radius="28dp" />
</shape>
